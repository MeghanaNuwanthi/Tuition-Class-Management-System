<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" /> <!-- Shadow color -->
            <corners android:radius="20dp" />
            <padding android:top="-2dp" android:left="0dp" android:right="3dp" android:bottom="3dp" />
        </shape>
    </item>

    <!-- Main container layer -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A3B87" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
